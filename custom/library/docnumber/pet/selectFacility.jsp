<%@ page contentType="text/html; charset=UTF-8" %>
<%@ page errorPage="/wdk/errorhandler.jsp" %>
<%@ taglib uri="/WEB-INF/tlds/dmform_1_0.tld" prefix="dmf" %>
<%@ taglib uri="/WEB-INF/tlds/dmformext_1_0.tld" prefix="dmfx" %>
<%@ page import="com.bhpb.imp.wdk.webtop.docnumber.pet.GenerateNumberFormat" %>
<%@ taglib uri="/WEB-INF/tlds/impform_1_0.tld" prefix="imp" %>
<dmf:webform/>
<dmf:form>
<table width='100%'>
<tr><td style='padding-left:10px'>
<table border="0" bordercolor="blue" cellpadding="2" cellspacing="0" width="100%">
			<tr>
			    <td class="fieldlabel" align="right"><b><dmf:label cssclass="defaultDocbaseAttributeStyle" nlsid="MSG_FORMAT_NAME"/>
			    </td>
			    <td class="defaultcolumnspacer">:&nbsp;</td>
			    <td> <imp:text name="<%= GenerateNumberFormat.FORMAT_NAME_CONTROL %>" maxlength="64"/>
			   <dmf:requiredfieldvalidator name="name_validator" controltovalidate="<%= GenerateNumberFormat.FORMAT_NAME_CONTROL %>" nlsid="MSG_MUST_HAVE_NAME"/>
				<!-- space for validation messages generated by class-->
    			<dmf:label name="<%=GenerateNumberFormat.ERROR_LABEL_CONTROL %>" cssclass="validatorMessageStyle"/>
			    </td>
			</tr>
			
			<tr>
			    <td class="fieldlabel" align="right"><b><dmf:label cssclass="defaultDocbaseAttributeStyle" nlsid="MSG_FORMAT_DESC"/>
			    </td>
			    <td class="defaultcolumnspacer">:&nbsp;</td>
			    <td> <imp:text name="<%= GenerateNumberFormat.FORMAT_DESC_CONTROL %>" maxlength="64"/>
			    </td>
			</tr>
		
		
			<tr>
			    <td class="fieldlabel" align="right"><b><dmf:label cssclass="defaultDocbaseAttributeStyle" nlsid="MSG_FACILITY"/>
			    </td>
			    <td class="defaultcolumnspacer">:&nbsp;</td>
			    <td> 
			    <dmf:dropdownlist name="<%= GenerateNumberFormat.FACILITY_CONTROL %>" >
			    </dmf:dropdownlist>
			   <dmf:requiredfieldvalidator name="facility_validator" controltovalidate="<%= GenerateNumberFormat.FACILITY_CONTROL %>" nlsid="MSG_MUST_HAVE_FACILITY"/>
			    </td>
			</tr>

<tr>
<td height='10'>&nbsp;</td>
</tr>
</table>
</td></tr>
</table>
</dmf:form>
